<script>
// Número de contacto (para WhatsApp)
const phone = "5493865385988";

// Inventario escolar (usando fotos y lógica del HTML escolar)
const inventario = {
    ropa: [
        { nombre:"Camiseta Matemática", precio:"1500", img:"1.png" },
        { nombre:"Buzo Algoritmo", precio:"2500", img:"2.png" },
        { nombre:"Gorra Ciencia", precio:"1200", img:"3.png" }
    ],
    electronica: [
        { nombre:"Calculadora Científica", precio:"3500", img:"4.png" },
        { nombre:"Tablet Educativa", precio:"7500", img:"5.png" },
        { nombre:"Robot Programable", precio:"12000", img:"6.png" }
    ],
    botanica: [
        { nombre:"Planta de Aula", precio:"800", img:"7.png" },
        { nombre:"Maceta Decorativa", precio:"1500", img:"8.png" },
        { nombre:"Kit Jardinería", precio:"2200", img:"9.png" }
    ],
    herramientas: [
        { nombre:"Juego de Geometría", precio:"900", img:"10.png" },
        { nombre:"Set de Pintura", precio:"1800", img:"11.png" },
        { nombre:"Microscopio Escolar", precio:"5500", img:"12.png" }
    ]
};

// Renderizado automático de productos
Object.keys(inventario).forEach(cat=>{
    const container = document.getElementById(cat);
    if(container){
        inventario[cat].forEach(prod=>{
            const msg = `Hola, me interesa el producto: ${prod.nombre} ($${prod.precio})`;
            container.innerHTML += `
            <div class="product-card">
                <img src="${prod.img}" alt="${prod.nombre}">
                <h3>${prod.nombre}</h3>
                <p>Precio: $${prod.precio}</p>
                <a href="https://wa.me/${phone}?text=${encodeURIComponent(msg)}" target="_blank">
                    <button>Adquirir</button>
                </a>
            </div>`;
        });
    }
});
</script>

